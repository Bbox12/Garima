<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="3dp"
    android:padding="5dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RadioButton
                android:id="@+id/button2_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:background="@android:drawable/dark_header"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:minHeight="48dp"
                android:padding="2dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:text="Order"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:theme="@style/MyCheckbox"
                android:typeface="normal"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/rl5"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:orientation="horizontal">


                <LinearLayout

                    android:id="@+id/_rrr"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <ImageButton
                        android:id="@+id/button2_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:adjustViewBounds="true"
                        android:background="#a5d6a7"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:src="@mipmap/ic_neg"
                        android:text="Button"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />


                    <EditText
                        android:id="@+id/rate_km"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="0.33"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/roboto_mono"
                        android:gravity="center_horizontal|center"
                        android:inputType="textPersonName"
                        android:minWidth="24dp"
                        android:minEms="2"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <ImageButton
                        android:id="@+id/button2_add"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:adjustViewBounds="true"
                        android:background="#d50000 "
                        android:shadowColor="@color/white"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:src="@mipmap/ic_add"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />


                </LinearLayout>
            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button2_plus"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:elevation="0dp"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/service_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:fitsSystemWindows="false"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c1"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:lines="2"
                    android:maxLines="2"
                    android:minEms="4"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top"
                    android:textSize="14sp"
                    android:visibility="visible"
                    card_view:fontFamily="@font/roboto_mono" />


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/rl1"
            android:layout_marginTop="5dp"
            android:background="@color/blue"
            android:visibility="visible">


            <TextView
                android:id="@+id/discount_"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="0.25"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_mono"
                android:gravity="center_vertical|center_horizontal"
                android:minEms="4"
                android:textColor="#B0BEC5"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/discount_"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/discountprice_"
                    android:layout_toRightOf="@+id/discountprice_"
                    android:layout_weight="0.25"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_mono"
                    android:gravity="center_vertical|center_horizontal"
                    android:minEms="4"
                    android:textColor="#2196F3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#B0BEC5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/discountprice_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:layout_weight="0.25"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif"
                        android:gravity="top|center_horizontal"
                        android:minEms="4"
                        android:textColor="#B0BEC5"
                        android:textSize="14sp"
                        android:visibility="visible" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:layout_alignParentTop="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="#B0BEC5"
                        android:foregroundGravity="center_vertical" />

                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

