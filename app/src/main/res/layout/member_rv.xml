<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="0.5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/_imp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical|start"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/login"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="0.8"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:textColorHint="@color/top">

                    <EditText
                        android:id="@+id/_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:ems="14"
                        android:gravity="top"
                        android:hint="Name"
                        android:focusableInTouchMode="false"
                        android:inputType="text|textMultiLine"
                        android:padding="10dp"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColorHint="@color/top">

                    <EditText
                        android:id="@+id/_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:ems="14"
                        android:gravity="top"
                        android:hint="Address"
                        android:focusableInTouchMode="false"
                        android:inputType="text|textMultiLine"
                        android:padding="10dp"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/_image_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:adjustViewBounds="true"
                android:background="@mipmap/ic_info"
                android:scaleType="fitXY"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/_image_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:adjustViewBounds="true"
                android:background="@mipmap/ic_close"
                android:scaleType="fitXY"
                android:visibility="visible" />

        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>








